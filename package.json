{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "@types/node": "^24.5.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@eslint/json": "^0.13.2",
    "eslint": "^9.35.0",
    "globals": "^16.4.0",
    "lerna": "^8.2.4",
    "npm-check-updates": "^18.1.1",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.0"
  },
  "scripts": {
    "build": "npm run build:tokens && npx lerna run build",
    "build:tokens": "npx lerna run build --scope='@stencil-storybook-boilerplate/design-tokens'",
